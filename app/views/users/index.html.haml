.body
  .box-main
    .box-main__header
      %h1.box-main-icon
        = image_tag 'logo.svg'
    .box-main__center
      .box-main-content
        %h2.box-main-content__new 新規会員登録
        .box-main-content__sign_up
          .box-main-content__sign_up__mail
            -# = link_to new_signup_path do
            = link_to 'メールアドレスを登録する','/users/new', class: 'links' 
            %i.box-main-content__sign_up__mail__icon
              = fa_icon 'envelope'
          .box-main-content__sign_up__face
            = link_to 'https://ja-jp.facebook.com/', class: 'links' do
              .box-main-content__sign_up__face__login
              %i.box-main-content__sign_up__face__icon
                = fa_icon 'facebook-square'
              Facebookを登録する
          .box-main-content__sign_up__g
            %i.box-main-content__sign_up__g__icon
              -# = image_tag 'google-color.jpg'
              = fa_icon 'google'
            Googleで登録する
    .box-main__footer
      = render "items/sub-footer"