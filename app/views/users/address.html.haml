.address-body
  .address-body__header
    = render "shared/sub-header"
  .address-body__center
    .address-body__center__upper
      %h2.address-body__center__upper__title 発送元・お届け先住所入力
      .address-body__center__under
        .address-body__center__under__form
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label お名前
            %span.address-body__center__under__form__in__required 必須
            .address-body__center__under__form__in__first-name
              %input.address-body__center__under__form__in__name{:placeholder => "例）"}
              %input.address-body__center__under__form__in__name{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label お名前カナ
            %span.address-body__center__under__form__in__required 必須
            .address-body__center__under__form__in__first-name
              %input.address-body__center__under__form__in__name{:placeholder => "例）"}
              %input.address-body__center__under__form__in__name{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label 郵便番号
            %span.address-body__center__under__form__in__required 必須
            %input.address-body__center__under__form__in__put{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label 都道府県
            %span.address-body__center__under__form__in__required 必須
            %input.address-body__center__under__form__in__put{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label 市区町村
            %span.address-body__center__under__form__in__required 必須
            %input.address-body__center__under__form__in__put{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label 番地
            %span.address-body__center__under__form__in__required 必須
            %input.address-body__center__under__form__in__put{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label 建物名
            %span.address-body__center__under__form__in__any 任意
            %input.address-body__center__under__form__in__put{:placeholder => "例）"}
          .address-body__center__under__form__in
            %label.address-body__center__under__form__in__label 電話
            %span.address-body__center__under__form__in__any 任意
            %input.address-body__center__under__form__in__put{:placeholder => "例）07211919"}

          .address-body__center__under__form__next
            = link_to "/users/pay",class:"address-body__center__under__form__next" do
              .address-body__center__under__form__next__b
                次へ進む
          
  .address_body__footer
    = render "shared/sub-footer"